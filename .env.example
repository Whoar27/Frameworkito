 
# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

# Entorno de la aplicación (development, production, testing)
APP_ENV=development

# Activar modo debug (true/false)
APP_DEBUG=true

# Modo mantenimiento (true/false) - Muestra página de mantenimiento
APP_MAINTENANCE=false

# Nombre de la aplicación
APP_NAME="AuthManager Base"

# URL base de la aplicación
APP_URL=http://localhost

# Clave secreta para encriptación (generar una única para cada proyecto)
APP_KEY=tu-clave-secreta-unica-de-32-caracteres

# Zona horaria
APP_TIMEZONE=America/Bogota

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================

# Tipo de base de datos (mysql, pgsql, sqlite)
DB_CONNECTION=mysql

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT=3306

# Nombre de la base de datos
DB_DATABASE=proyecto_base

# Usuario de la base de datos
DB_USERNAME=root

# Contraseña de la base de datos
DB_PASSWORD=

# Prefijo de tablas (opcional)
DB_PREFIX=

# Charset de la base de datos
DB_CHARSET=utf8mb4

# Collation de la base de datos
DB_COLLATION=utf8mb4_unicode_ci

# ============================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ============================================

# Driver de correo (smtp, mail, sendmail)
MAIL_DRIVER=smtp

# Host del servidor SMTP
MAIL_HOST=smtp.gmail.com

# Puerto del servidor SMTP
MAIL_PORT=587

# Usuario del correo (email completo)
MAIL_USERNAME=tu-email@gmail.com

# Contraseña del correo o App Password
MAIL_PASSWORD=tu-password-o-app-password

# Encriptación (tls, ssl, null)
MAIL_ENCRYPTION=tls

# Email "desde" por defecto
MAIL_FROM_ADDRESS=noreply@tu-dominio.com

# Nombre "desde" por defecto
MAIL_FROM_NAME="AuthManager Base"

# ============================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================

# Duración de la sesión en minutos (0 = hasta cerrar navegador)
SESSION_LIFETIME=120

# Recordar sesión por defecto en días
REMEMBER_ME_DURATION=30

# Máximo de intentos de login fallidos antes de bloquear
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo en minutos después de exceder intentos
LOGIN_LOCKOUT_DURATION=15

# Requerir verificación de email al registrarse (true/false)
REQUIRE_EMAIL_VERIFICATION=true

# Activar autenticación de dos factores (true/false)
ENABLE_TWO_FACTOR=false

# Tiempo de expiración de tokens en minutos
TOKEN_EXPIRY_MINUTES=60

# ============================================
# CONFIGURACIÓN DE LOGGING
# ============================================

# Nivel de logging (debug, info, warning, error)
LOG_LEVEL=info

# Rotación de logs (daily, weekly, monthly)
LOG_ROTATION=daily

# Días máximos para mantener logs
LOG_MAX_DAYS=30

# Tamaño máximo de archivo de log en MB
LOG_MAX_SIZE=10

# Activar logs en base de datos (true/false)
LOG_TO_DATABASE=true

# Activar logs en archivos (true/false)
LOG_TO_FILES=true

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Activar protección CSRF (true/false)
CSRF_PROTECTION=true

# Duración del token CSRF en minutos
CSRF_TOKEN_LIFETIME=60

# Activar HTTPS obligatorio (true/false)
FORCE_HTTPS=false

# Activar validación de IP en sesiones (true/false)
VALIDATE_SESSION_IP=true

# Activar headers de seguridad (true/false)
SECURITY_HEADERS=true

# ============================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================

# Directorio de uploads
UPLOAD_PATH=public/uploads

# Tamaño máximo de archivo en MB
MAX_FILE_SIZE=5

# Tipos de archivo permitidos para avatares
AVATAR_ALLOWED_TYPES=jpg,jpeg,png,gif

# Tamaño máximo para avatares en MB
AVATAR_MAX_SIZE=2

# ============================================
# CONFIGURACIÓN DE CACHÉ
# ============================================

# Driver de caché (file, redis, memcached, array)
CACHE_DRIVER=file

# Tiempo de caché por defecto en minutos
CACHE_DEFAULT_TTL=60

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================

# Mostrar errores de PHP (true/false)
DISPLAY_ERRORS=true

# Reportar todos los errores (true/false)
REPORT_ALL_ERRORS=true

# Activar profiling de consultas (true/false)
ENABLE_QUERY_LOG=true

# ============================================
# CONFIGURACIÓN DE API (OPCIONAL)
# ============================================

# Activar API REST (true/false)
ENABLE_API=false

# Prefijo de rutas de API
API_PREFIX=api

# Versión de API por defecto
API_VERSION=v1

# Rate limiting para API (requests per minute)
API_RATE_LIMIT=60

# ============================================
# CONFIGURACIÓN EXTERNA (OPCIONAL)
# ============================================

# Google reCAPTCHA (opcional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# OAuth Google (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth Facebook (opcional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ============================================
# NOTAS IMPORTANTES
# ============================================
#
# 1. Copia este archivo a .env y configura tus valores
# 2. NUNCA subas el archivo .env a control de versiones
# 3. Genera una APP_KEY única para cada proyecto
# 4. Para Gmail, usa App Passwords en lugar de tu contraseña
# 5. En producción, cambia APP_DEBUG a false
# 6. En producción, usa HTTPS y cambia FORCE_HTTPS a true
#